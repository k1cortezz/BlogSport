<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2>Edit Fitness Post</h2>
      </div>
      <div class="card-body">
        <form action="/posts/<%= @post.id %>" method="POST">
          <input type="hidden" name="_method" value="PATCH">
          <div class="mb-3">
            <label for="post[title]" class="form-label">Title</label>
            <input type="text" class="form-control" id="post[title]" name="post[title]" value="<%= @post.title %>" required>
          </div>
          <div class="mb-3">
            <label for="post[content]" class="form-label">Content</label>
            <textarea class="form-control" id="post[content]" name="post[content]" rows="10" required><%= @post.content %></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Tags</label>
            <div class="row">
              <% @tags.each do |tag| %>
                <div class="col-md-3">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="tags[]" value="<%= tag.id %>" 
                           id="tag_<%= tag.id %>" <%= 'checked' if @post.tags.include?(tag) %>>
                    <label class="form-check-label" for="tag_<%= tag.id %>">
                      <%= tag.name %>
                    </label>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Update Post</button>
        </form>
      </div>
    </div>
  </div>
</div>